@using ClubManagement.Service.DTOs.ResponseDTOs
@model FeeResponseDTO

@{
    ViewData["Title"] = "Chi tiết Phí";
    var payments = ViewBag.Payments as IEnumerable<ClubManagement.Repository.Models.Payment> ?? new List<ClubManagement.Repository.Models.Payment>();
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-info-circle me-2"></i>Chi tiết Phí</h2>
            <p class="text-muted mb-0">Thông tin chi tiết về khoản phí và danh sách thanh toán.</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Thông tin Phí</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề:</dt>
                        <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                        <dt class="col-sm-4">Câu lạc bộ:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ClubName</span>
                        </dd>

                        <dt class="col-sm-4">Số tiền:</dt>
                        <dd class="col-sm-8">
                            <span class="fw-bold text-success fs-5">@Model.Amount.ToString("N0") đ</span>
                        </dd>

                        <dt class="col-sm-4">Hạn nộp:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-calendar-event me-1"></i>
                                @Model.DueDate.ToString("dd/MM/yyyy")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "Không có mô tả")</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>Danh sách Thanh toán</h5>
                </div>
                <div class="card-body">
                    @if (!payments.Any())
                    {
                        <p class="text-muted text-center py-3">Chưa có ai đóng phí này.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Người đóng</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày đóng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in payments)
                                    {
                                        <tr>
                                            <td>@payment.User.FullName</td>
                                            <td class="fw-bold text-success">@payment.Amount.ToString("N0") đ</td>
                                            <td>
                                                @if (payment.Status == "Paid")
                                                {
                                                    <span class="badge bg-success">Đã xác nhận</span>
                                                }
                                                else if (payment.Status == "Pending")
                                                {
                                                    <span class="badge bg-info text-white">Đã đóng, chờ xác nhận</span>
                                                }
                                                else if (payment.Status == "Unpaid")
                                                {
                                                    <span class="badge bg-warning text-dark">Chưa đóng</span>
                                                }
                                                else if (payment.Status == "Expired")
                                                {
                                                    <span class="badge bg-danger">Quá hạn</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@payment.Status</span>
                                                }
                                            </td>
                                            <td>
                                                @if (payment.PaymentDate.HasValue)
                                                {
                                                    <span>@payment.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa đóng</span>
                                                }
                                            </td>
                                            <td>
                                                @if (payment.Status == "Pending")
                                                {
                                                    <a href="/Payment/Confirm/@payment.PaymentId" class="btn btn-sm btn-success">
                                                        <i class="bi bi-check-circle me-1"></i>Xác nhận
                                                    </a>
                                                }
                                                else if (payment.Status == "Unpaid" || payment.Status == "Expired")
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

