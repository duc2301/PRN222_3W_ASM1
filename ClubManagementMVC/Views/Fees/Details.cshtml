@using ClubManagement.Service.DTOs.ResponseDTOs
@model FeeResponseDTO

@{
    ViewData["Title"] = "Chi tiết Phí";
    var payments = ViewBag.Payments as IEnumerable<ClubManagement.Repository.Models.Payment> ?? new List<ClubManagement.Repository.Models.Payment>();
}

<div class="container-fluid py-4">
    @if (TempData["msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-info-circle me-2"></i>Chi tiết Phí</h2>
            <p class="text-muted mb-0">Thông tin chi tiết về khoản phí và danh sách thanh toán.</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Thông tin Phí</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tiêu đề:</dt>
                        <dd class="col-sm-8"><strong>@Model.Title</strong></dd>

                        <dt class="col-sm-4">Câu lạc bộ:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info">@Model.ClubName</span>
                        </dd>

                        <dt class="col-sm-4">Số tiền:</dt>
                        <dd class="col-sm-8">
                            <span class="fw-bold text-success fs-5">@Model.Amount.ToString("N0") đ</span>
                        </dd>

                        <dt class="col-sm-4">Hạn nộp:</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-calendar-event me-1"></i>
                                @Model.DueDate.ToString("dd/MM/yyyy")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Mô tả:</dt>
                        <dd class="col-sm-8">@(Model.Description ?? "Không có mô tả")</dd>

                        <dt class="col-sm-4">Ngày tạo:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-people me-2"></i>Danh sách Thanh toán
                        <span class="badge bg-light text-dark ms-2">@payments.Count() thành viên</span>
                    </h5>
                </div>
                <div class="card-body">
                    @if (!payments.Any())
                    {
                        <p class="text-muted text-center py-3">
                            <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                            Chưa có ai đóng phí này.
                        </p>
                    }
                    else
                    {
                        var paidCount = payments.Count(p => string.Equals(p.Status?.Trim(), "Paid", StringComparison.OrdinalIgnoreCase));
                        var pendingCount = payments.Count(p => string.Equals(p.Status?.Trim(), "Pending", StringComparison.OrdinalIgnoreCase));
                        var unpaidCount = payments.Count(p => string.Equals(p.Status?.Trim(), "Unpaid", StringComparison.OrdinalIgnoreCase));
                        var expiredCount = payments.Count(p => string.Equals(p.Status?.Trim(), "Expired", StringComparison.OrdinalIgnoreCase));
                        
                        <div class="mb-3">
                            <div class="row g-2">
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-success">@paidCount</div>
                                        <small class="text-muted">Đã xác nhận</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-info">@pendingCount</div>
                                        <small class="text-muted">Chờ xác nhận</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-warning">@unpaidCount</div>
                                        <small class="text-muted">Chưa đóng</small>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="text-center p-2 bg-light rounded">
                                        <div class="fw-bold text-danger">@expiredCount</div>
                                        <small class="text-muted">Quá hạn</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Người đóng</th>
                                        <th>Số tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Ngày đóng</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in payments.OrderByDescending(p => p.PaymentDate ?? DateTime.MinValue).ThenBy(p => p.Status))
                                    {
                                        var status = payment.Status?.Trim() ?? "";
                                        <tr>
                                            <td class="fw-bold">@(payment.User?.FullName ?? "N/A")</td>
                                            <td class="fw-bold text-success">@payment.Amount.ToString("N0") đ</td>
                                            <td>
                                                @if (string.Equals(status, "Paid", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>Đã xác nhận
                                                    </span>
                                                }
                                                else if (string.Equals(status, "Pending", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-info text-white">
                                                        <i class="bi bi-hourglass-split me-1"></i>Đã đóng, chờ xác nhận
                                                    </span>
                                                }
                                                else if (string.Equals(status, "Unpaid", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-clock me-1"></i>Chưa đóng
                                                    </span>
                                                }
                                                else if (string.Equals(status, "Expired", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="bi bi-exclamation-triangle me-1"></i>Quá hạn
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@(string.IsNullOrEmpty(status) ? "N/A" : payment.Status)</span>
                                                }
                                            </td>
                                            <td>
                                                @if (payment.PaymentDate.HasValue)
                                                {
                                                    <span>@payment.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Chưa đóng</span>
                                                }
                                            </td>
                                            <td>
                                                @if (string.Equals(status, "Pending", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <form asp-controller="Payment" asp-action="ConfirmPayment" method="post" style="display: inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@payment.PaymentId" />
                                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Bạn có chắc chắn muốn xác nhận thanh toán này?');">
                                                            <i class="bi bi-check-circle me-1"></i>Xác nhận
                                                        </button>
                                                    </form>
                                                }
                                                else if (string.Equals(status, "Paid", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1"></i>Đã xác nhận
                                                    </span>
                                                }
                                                else if (string.Equals(status, "Unpaid", StringComparison.OrdinalIgnoreCase) || string.Equals(status, "Expired", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

