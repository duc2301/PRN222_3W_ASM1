@using ClubManagement.Service.DTOs.ResponseDTOs
@model IEnumerable<ActivityResponseDTO>

@{
    ViewData["Title"] = "Activities Management";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary">
                <i class="bi bi-calendar-event me-2"></i>Activities Management
            </h2>
            <p class="text-muted mb-0">Quản lý các hoạt động và sự kiện của câu lạc bộ.</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Create New Activity
        </a>
    </div>

    <!-- Search & Filter -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3 bg-light rounded">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" id="searchActivity" class="form-control border-start-0" 
                               placeholder="Search activity name...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="filterClub" class="form-select">
                        <option value="">All Clubs</option>
                        @foreach (var activity in Model.GroupBy(a => a.Club?.ClubName).Where(g => g.Key != null))
                        {
                            <option value="@activity.Key">@activity.Key</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="filterStatus" class="form-select">
                        <option value="">All Status</option>
                        <option value="upcoming">Upcoming</option>
                        <option value="ongoing">Ongoing</option>
                        <option value="completed">Completed</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Activities Grid -->
    <div class="row g-4" id="activitiesGrid">
        @if (!Model.Any())
        {
            <div class="col-12">
                <div class="card shadow border-0 text-center py-5">
                    <i class="bi bi-inbox fs-1 text-muted mb-3"></i>
                    <h5 class="text-muted">No activities found</h5>
                    <p class="text-muted">Create your first activity to get started!</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                var statusClass = "secondary";
                var statusText = "Unknown";
                var statusIcon = "question-circle";
                
                if (item.EndDate.HasValue && item.EndDate < DateTime.Now)
                {
                    statusClass = "secondary";
                    statusText = "Completed";
                    statusIcon = "check-circle";
                }
                else if (item.StartDate > DateTime.Now)
                {
                    statusClass = "info";
                    statusText = "Upcoming";
                    statusIcon = "clock";
                }
                else if (item.StartDate <= DateTime.Now && (!item.EndDate.HasValue || item.EndDate >= DateTime.Now))
                {
                    statusClass = "success";
                    statusText = "Ongoing";
                    statusIcon = "play-circle";
                }

                <div class="col-md-6 col-lg-4 activity-card" 
                     data-club="@item.Club?.ClubName" 
                     data-status="@statusText.ToLower()"
                     data-name="@item.ActivityName">
                    <div class="card h-100 shadow-sm border-0 activity-item hover-lift">
                        <div class="card-header bg-gradient bg-@statusClass text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0 fw-bold">
                                    <i class="bi bi-@statusIcon me-2"></i>
                                    @item.ActivityName
                                </h5>
                                <span class="badge bg-white bg-opacity-25">@statusText</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <small class="text-muted d-flex align-items-center mb-2">
                                    <i class="bi bi-building me-2"></i>
                                    <strong>Club:</strong>
                                    <span class="ms-2 badge bg-primary bg-opacity-10 text-primary">
                                        @(item.Club?.ClubName ?? "N/A")
                                    </span>
                                </small>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="text-muted small mb-3">
                                    <i class="bi bi-card-text me-2"></i>
                                    @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                                </p>
                            }

                            <div class="mb-2">
                                <small class="text-muted">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    <strong>Start:</strong> @item.StartDate.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </div>
                            
                            @if (item.EndDate.HasValue)
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <i class="bi bi-calendar-check me-2"></i>
                                        <strong>End:</strong> @item.EndDate.Value.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(item.Location))
                            {
                                <div class="mb-3">
                                    <small class="text-muted">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        <strong>Location:</strong> @item.Location
                                    </small>
                                </div>
                            }

                            <div class="border-top pt-3">
                                <small class="text-muted">
                                    <i class="bi bi-people me-2"></i>
                                    <strong>Participants:</strong> 
                                    <span class="badge bg-success">@item.ActivityParticipants.Count</span>
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-0 pt-0 pb-3">
                            <div class="btn-group w-100" role="group">
                                <a asp-action="Details" asp-route-id="@item.ActivityId" 
                                   class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ActivityId" 
                                   class="btn btn-outline-warning btn-sm flex-fill">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ActivityId" 
                                   class="btn btn-outline-danger btn-sm flex-fill">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/activities.js" asp-append-version="true"></script>
}
