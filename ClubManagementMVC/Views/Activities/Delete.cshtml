@using ClubManagement.Service.DTOs.ResponseDTOs
@model ActivityResponseDTO

@{
    ViewData["Title"] = "Delete Activity";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="fw-bold text-danger">
                <i class="bi bi-trash me-2"></i>Delete Activity
            </h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index">Activities</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Warning!</h5>
                    <p class="mb-0">Are you sure you want to delete this activity? This action cannot be undone.</p>
                </div>
            </div>

            <div class="card shadow-sm border-danger border-2">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-x me-2"></i>Activity Details</h5>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-tag me-2"></i>Activity Name
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Model.ActivityName
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-building me-2"></i>Club
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-primary">@(Model.Club?.ClubName ?? "N/A")</span>
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-card-text me-2"></i>Description
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Description ?? "No description")
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-calendar-event me-2"></i>Start Date
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-info bg-opacity-10 text-info">
                                @Model.StartDate.ToString("dddd, dd MMMM yyyy HH:mm")
                            </span>
                        </dd>

                        @if (Model.EndDate.HasValue)
                        {
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-calendar-check me-2"></i>End Date
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-warning bg-opacity-10 text-warning">
                                    @Model.EndDate.Value.ToString("dddd, dd MMMM yyyy HH:mm")
                                </span>
                            </dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Location))
                        {
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-geo-alt me-2"></i>Location
                            </dt>
                            <dd class="col-sm-8">
                                @Model.Location
                            </dd>
                        }

                        <dt class="col-sm-4 text-muted">
                            <i class="bi bi-people me-2"></i>Participants
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-success">@Model.ActivityParticipants.Count participants</span>
                        </dd>
                    </dl>

                    @if (Model.ActivityParticipants.Any())
                    {
                        <div class="alert alert-warning mt-3" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            <strong>Note:</strong> This activity has @Model.ActivityParticipants.Count registered participants. 
                            Deleting this activity will remove all participant records.
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ActivityId" />
                        <div class="border-top pt-4">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-arrow-left me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="bi bi-trash me-1"></i>Confirm Delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
