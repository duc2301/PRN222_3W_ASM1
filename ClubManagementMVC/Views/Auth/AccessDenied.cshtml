@{
    ViewData["Title"] = "Access Denied";
}
<div class="text-center mt-5">
    <h1 class="display-5 text-danger">403 - Truy cập bị từ chối</h1>
    <p class="lead">Bạn không có quyền truy cập chức năng này.</p>
    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl as string))
    {
        <p class="text-muted">Trang yêu cầu: @ViewBag.ReturnUrl</p>
    }
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">
        Về trang chủ
    </a>
</div>
