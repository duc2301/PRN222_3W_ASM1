@model ClubManagement.Service.DTOs.RequestDTOs.SubmitJoinRequestDTO

@{
    ViewData["Title"] = "Submit Join Request";
}

<h2>Submit Join Request</h2>

<form asp-action="Submit" method="post">
    <div class="form-group mb-3">
        <label>User Email</label>
        <input asp-for="UserEmail" class="form-control" readonly />
    </div>

    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="ClubId"></label>
        <select asp-for="ClubId" class="form-control" asp-items="ViewBag.ClubId"></select>
        <span asp-validation-for="ClubId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Note"></label>
        <input asp-for="Note" class="form-control" />
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
