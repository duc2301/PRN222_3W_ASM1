@model ClubManagement.Service.DTOs.RequestDTOs.SubmitJoinRequestDTO
@{
    ViewData["Title"] = "Gửi Yêu Cầu Tham Gia";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-person-plus me-2"></i>Gửi Yêu Cầu Tham Gia</h2>
            <p class="text-muted mb-0">Chọn câu lạc bộ bạn muốn tham gia</p>
        </div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Quay lại
        </a>
    </div>

    <!-- Thông báo lỗi -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Thông báo thành công -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-clipboard-check me-2"></i>Thông tin yêu cầu</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Submit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                Email của bạn
                            </label>
                            <input asp-for="UserEmail" class="form-control form-control-lg" readonly />
                            <small class="form-text text-muted">Email tài khoản của bạn</small>
                        </div>

                        <input type="hidden" asp-for="UserId" />

                        <div class="mb-4">
                            <label asp-for="ClubId" class="form-label fw-bold">
                                Câu lạc bộ <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ClubId" class="form-select form-control-lg" asp-items="ViewBag.ClubId">
                                <option value="">-- Chọn câu lạc bộ --</option>
                            </select>
                            <span asp-validation-for="ClubId" class="text-danger"></span>
                            <small class="form-text text-muted">Chọn câu lạc bộ bạn muốn tham gia</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Note" class="form-label fw-bold">Ghi chú</label>
                            <textarea asp-for="Note" class="form-control" rows="4"
                                      placeholder="Giới thiệu bản thân hoặc lý do muốn tham gia..."></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                            <small class="form-text text-muted">Thông tin này sẽ giúp quản lý câu lạc bộ xem xét đơn của bạn</small>
                        </div>

                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Yêu cầu của bạn sẽ được gửi đến quản lý câu lạc bộ để xem xét và phê duyệt.
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send me-1"></i> Gửi yêu cầu
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i> Hủy
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts after 5 seconds
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Validate club selection
            $('form').submit(function(e) {
                var clubId = $('#ClubId').val();
                if (!clubId) {
                    e.preventDefault();
                    alert('Vui lòng chọn câu lạc bộ!');
                    $('#ClubId').focus();
                    return false;
                }
            });
        });
    </script>
}