@using ClubManagement.Service.DTOs.RequestDTOs
@using System.Security.Claims
@model UpdateClubRequestDTO

@{
    Layout = "~/Views/Shared/_ClubLayout.cshtml";
    ViewData["Title"] = "Chỉnh sửa CLB";
    ViewData["HeaderTitle"] = "Chỉnh sửa CLB";
    ViewData["HeaderSubtitle"] = "Cập nhật thông tin câu lạc bộ";
    var isClubManager = User.IsInRole("ClubManager");
    var leaderError = ViewBag.LeaderError as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="h5 fw-semibold mb-1">Chỉnh sửa CLB</h2>
        <p class="text-muted mb-0" style="font-size: 14px;">
            Cập nhật thông tin cho câu lạc bộ của bạn.
        </p>
    </div>
    <a asp-action="MyClubs" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left me-1"></i> Quay lại danh sách
    </a>
</div>

@if (!string.IsNullOrEmpty(leaderError))
{
    <div class="alert alert-warning mb-3">@leaderError</div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="ClubId" />
                    <div class="mb-3">
                        <label asp-for="ClubName" class="form-label fw-semibold"></label>
                        <input asp-for="ClubName" class="form-control" />
                        <span asp-validation-for="ClubName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="CreatedAt" />
                    <div class="mb-3">
                        
                        @if (isClubManager)
                        {
                            <input type="hidden" name="LeaderId" value="@Model.LeaderId" />
                        }
                        else
                        {
                            <label asp-for="LeaderId" class="form-label fw-semibold"></label>
                            @Html.DropDownListFor(m => m.LeaderId, (SelectList)ViewData["LeaderId"], "Select Leader", new { @class = "form-select" })
                        }
                    </div>
                    <div class="d-grid">
                        <input type="submit" value="Lưu thay đổi" class="btn btn-primary fw-semibold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
