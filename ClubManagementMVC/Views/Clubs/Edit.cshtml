@using ClubManagement.Service.DTOs.RequestDTOs
@using System.Security.Claims
@model UpdateClubRequestDTO
@{
    ViewData["Title"] = "Edit";
}
@{
    var isClubManager = User.IsInRole("ClubManager");
}


<h1>Edit</h1>

<h4>Club</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClubId" />
            <div class="form-group">
                <label asp-for="ClubName" class="control-label"></label>
                <input asp-for="ClubName" class="form-control" />
                <span asp-validation-for="ClubName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LeaderId">Leader</label>
                @if (isClubManager)
                {
                    <input type="text" class="form-control" value="@Model.LeaderId" readonly />
                    <input type="hidden" name="LeaderId" value="@Model.LeaderId" />
                }
                else
                {
                    @Html.DropDownListFor(m => m.LeaderId, (SelectList)ViewData["LeaderId"], "Select Leader", new { @class = "form-control" })
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    @if (ViewBag.CanCreateFee == true)
    {
        <a asp-controller="Fees" asp-action="Create" asp-route-clubId="@Model?.ClubId" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Tạo Phí cho Câu Lạc Bộ
        </a>
        <span class="mx-2">|</span>
    }
    <a asp-action="Details" asp-route-id="@Model?.ClubId" class="btn btn-info">View Details</a>
    <span class="mx-2">|</span>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@{
    var leaderError = ViewBag.LeaderError as string;
}
@if (!string.IsNullOrEmpty(leaderError))
{
    <div class="alert alert-warning">@leaderError</div>
}
