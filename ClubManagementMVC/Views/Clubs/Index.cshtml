@using ClubManagement.Service.DTOs.ResponseDTOs
@model IEnumerable<ClubResponseDTO>

@{
    ViewData["Title"] = "Quản lý Câu Lạc Bộ";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>Danh sách CLB</h2>
            <p class="text-muted mb-0">Quản lý các câu lạc bộ và hoạt động trong hệ thống.</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Tạo CLB Mới
        </a>
    </div>

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body p-3 bg-light rounded">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0" placeholder="Tìm kiếm tên CLB...">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="py-3 ps-4">Tên CLB</th>
                            <th class="py-3">Mô tả</th>
                            <th class="py-3">Ngày thành lập</th>
                            <th class="py-3">Chủ nhiệm (Leader)</th>
                            <th class="py-3 text-end pe-4">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    Chưa có câu lạc bộ nào. Hãy tạo mới!
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-dark">
                                        @item.ClubName
                                    </td>
                                    <td>
                                        <span class="text-muted" title="@item.Description">
                                            @(item.Description?.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark border">
                                            <i class="bi bi-calendar-event me-1"></i>
                                            @item.CreatedAt?.ToString("dd/MM/yyyy")
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Leader != null)
                                        {
                                            <div class="d-flex align-items-center">
                                                <div class="bg-info bg-opacity-10 text-info rounded-circle p-2 me-2">
                                                    <i class="bi bi-person-fill"></i>
                                                </div>
                                                <div>
                                                    <div class="small fw-bold">@item.Leader.FullName</div>
                                                    <div class="small text-muted" style="font-size: 0.8rem;">@item.Leader.Email</div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Chưa có Leader</span>
                                        }
                                    </td>
                                    <td class="text-end pe-4">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@item.ClubId" class="btn btn-sm btn-outline-primary" title="Sửa">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.ClubId" class="btn btn-sm btn-outline-info" title="Chi tiết">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.ClubId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>