@using ClubManagement.Service.DTOs.ResponseDTOs
@model ClubResponseDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Club</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ClubName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClubName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedAt)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedAt)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Leader)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Leader.Email)
        </dd>
    </dl>
</div>
<div class="mt-4">
    @if (User.IsInRole("Admin") || (User.IsInRole("ClubManager") && Model?.Leader?.Username == User.Identity?.Name))
    {
        <a asp-controller="Fees" asp-action="Create" asp-route-clubId="@Model?.ClubId" class="btn btn-success">
            <i class="bi bi-plus-circle me-1"></i> Tạo Phí cho Câu Lạc Bộ
        </a>
        <span class="mx-2">|</span>
    }
    <a asp-action="Edit" asp-route-id="@Model?.ClubId" class="btn btn-primary">Edit</a>
    <span class="mx-2">|</span>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
