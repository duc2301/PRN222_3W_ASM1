@using ClubManagement.Service.DTOs.ResponseDTOs
@model List<ClubResponseDTO>

@{
    ViewData["Title"] = "Câu lạc bộ của tôi";
    ViewData["ActivePage"] = "Clubs";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = ViewBag.CurrentUser as UserResponseDTO;
}

<style>
    /* CSS Riêng cho Card Club */
    .club-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 15px;
        overflow: hidden;
        height: 100%;
        background-color: #fff;
        box-shadow: 0 4px 15px rgba(0,0,0,0.05);
    }

        .club-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    .club-icon-wrapper {
        height: 100px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
    }
</style>

<div class="container py-5">
    <div class="row">
        <partial name="ProfileSidebar" />

        <div class="col-md-9">
            <h4 class="fw-bold mb-4">Câu lạc bộ đã tham gia</h4>

            @if (Model != null && Model.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 g-4">
                    @foreach (var club in Model)
                    {
                        <div class="col">
                            <div class="card club-card">
                                <div class="club-icon-wrapper">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                                <div class="card-body p-4">
                                    <h5 class="card-title fw-bold">@club.ClubName</h5>
                                    <p class="card-text text-muted small mt-2" style="min-height: 40px;">
                                        @(club.Description?.Length > 80 ? club.Description.Substring(0, 80) + "..." : club.Description ?? "Chưa có mô tả.")
                                    </p>

                                    <hr class="opacity-25 my-3">

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle p-1 me-2 border">
                                                <i class="bi bi-person-circle text-secondary h5 mb-0"></i>
                                            </div>
                                            <div>
                                                <small class="d-block text-muted" style="font-size: 10px;">Leader</small>
                                                <span class="small fw-bold">@(club.Leader?.FullName ?? "Unknown")</span>
                                            </div>
                                        </div>
                                        <a href="#" class="btn btn-sm btn-outline-primary rounded-pill">Chi tiết</a>
                                    </div>
                                </div>
                                <div class="card-footer bg-white border-top-0 pb-3 pt-0">
                                    <small class="text-muted" style="font-size: 11px;">
                                        <i class="bi bi-calendar3 me-1"></i> Ngày tạo: @(club.CreatedAt?.ToString("dd/MM/yyyy") ?? "--/--/----")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 bg-white rounded-4 shadow-sm">
                    <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3 text-muted">Bạn chưa tham gia câu lạc bộ nào.</p>
                    <a href="#" class="btn btn-primary mt-2">Khám phá ngay</a>
                </div>
            }
        </div>
    </div>
</div>