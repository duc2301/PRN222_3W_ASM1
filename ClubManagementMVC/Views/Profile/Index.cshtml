@using ClubManagement.Service.DTOs.ResponseDTOs
@model UserResponseDTO
@{
    ViewData["Title"] = "Hồ sơ của tôi";
    ViewData["ActivePage"] = "Info"; // Đánh dấu menu active
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    :root {
        --primary-bg: #f3f4f6;
        --card-bg: #ffffff;
    }

    body {
        background-color: var(--primary-bg);
    }

    /* Card Styles */
    .profile-card {
        background: var(--card-bg);
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: none;
        overflow: hidden;
        margin-bottom: 24px;
    }

    .profile-cover {
        height: 180px;
        background: linear-gradient(to right, #2c3e50, #4ca1af);
        position: relative;
        padding: 20px;
        color: white;
    }

    .user-avatar {
        width: 120px;
        height: 120px;
        object-fit: cover;
        border: 4px solid #fff;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        position: absolute;
        top: 40px;
        left: 30px;
    }

    .cover-content {
        display: flex;
        align-items: center;
        height: 100%;
        padding-left: 140px;
    }

    .header-info-item {
        margin-right: 40px;
    }

        .header-info-item label {
            font-size: 12px;
            opacity: 0.8;
            display: block;
            margin-bottom: 2px;
        }

        .header-info-item span {
            font-weight: 600;
            font-size: 15px;
        }

    .btn-edit-float {
        position: absolute;
        right: 20px;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(255,255,255,0.2);
        color: white;
        border: 1px solid rgba(255,255,255,0.4);
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-edit-float:hover {
            background: white;
            color: #333;
        }
</style>

<div class="container py-5">
    <div class="row">
        <partial name="ProfileSidebar" />

        <div class="col-md-9">
            <div class="profile-card">
                <div class="profile-cover">
                    <div class="user-avatar-container">
                        <img src="https://static.vecteezy.com/system/resources/thumbnails/009/292/244/small/default-avatar-icon-of-social-media-user-vector.jpg" class="user-avatar" alt="Avatar">
                    </div>

                    <div class="cover-content d-none d-md-flex">
                        <div class="header-info-item">
                            <label>Họ và tên</label>
                            <span>@Model.FullName</span>
                        </div>
                        <div class="header-info-item">
                            <label>Email</label>
                            <span>@Model.Email</span>
                        </div>
                        <div class="header-info-item">
                            <label>Vai trò</label>
                            <span>@Model.Role</span>
                        </div>
                        <button class="btn-edit-float" title="Chỉnh sửa">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </div>
                </div>

                <div class="card-body p-4 pt-5 mt-3">
                    <h4 class="fw-bold mb-4">Thông tin chi tiết</h4>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold text-uppercase">Tên tài khoản</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-person"></i></span>
                                <input type="text" class="form-control bg-light border-0" value="@Model.Username" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold text-uppercase">Số điện thoại</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-0"><i class="bi bi-telephone"></i></span>
                                <input type="text" class="form-control bg-light border-0" value="@(Model.Phone ?? "Chưa cập nhật")" readonly>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label text-muted small fw-bold text-uppercase">Giới thiệu / Khoa</label>
                            <div class="p-3 bg-light rounded border-0">
                                @(Model.Department ?? "Chưa có thông tin giới thiệu.")
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-bold text-uppercase">Ngày tham gia</label>
                            <p class="mb-0 fw-bold">@Model.CreatedAt?.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>