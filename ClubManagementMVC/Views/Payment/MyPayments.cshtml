@model IEnumerable<ClubManagement.Repository.Models.Payment>

<h2>My Payments</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fee</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@(p.Fee != null ? p.Fee.Title : p.FeeId.ToString())</td>
                <td>@p.Amount</td>
                <td>@p.Status</td>
                <td>@(p.PaymentDate.HasValue? p.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            </tr>
        }
    </tbody>
</table>
