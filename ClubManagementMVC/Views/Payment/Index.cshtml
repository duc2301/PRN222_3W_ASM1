@model IEnumerable<ClubManagement.Repository.Models.Payment>

@{
    bool isAdmin = User.IsInRole("Admin");
}

<h2>All Payments</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Fee Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
            @if (isAdmin)
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.User.Email</td>
                <td>@p.Fee.Title</td>
                <td>@p.Amount</td>
                <td>@p.Status</td>
                <td>@p.PaymentDate</td>

                @if (isAdmin)
                {
                    <td>
                        @if (p.Status != "Paid")
                        {
                            <a class="btn btn-success btn-sm" href="/Payment/Confirm/@p.PaymentId">Ghi nhận thanh toán</a>

                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
