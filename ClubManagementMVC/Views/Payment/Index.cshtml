@model IEnumerable<ClubManagement.Repository.Models.Payment>

@{
    bool isAdmin = User.IsInRole("Admin");
    bool isClubManager = User.IsInRole("ClubManager");
    bool canConfirm = isAdmin || isClubManager;
}

<h2>All Payments</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Fee Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
            @if (canConfirm)
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.User.Email</td>
                <td>@p.Fee.Title</td>
                <td>@p.Amount</td>
                <td>
                    @if (p.Status == "Paid")
                    {
                        <span class="badge bg-success">Đã xác nhận</span>
                    }
                    else if (p.Status == "Pending")
                    {
                        <span class="badge bg-info text-white">Đã đóng, chờ xác nhận</span>
                    }
                    else if (p.Status == "Unpaid")
                    {
                        <span class="badge bg-warning text-dark">Chưa đóng</span>
                    }
                    else if (p.Status == "Expired")
                    {
                        <span class="badge bg-danger">Quá hạn</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@p.Status</span>
                    }
                </td>
                <td>@p.PaymentDate?.ToString("dd/MM/yyyy HH:mm")</td>

                @if (canConfirm)
                {
                    <td>
                        @if (p.Status == "Pending")
                        {
                            <a class="btn btn-success btn-sm" href="/Payment/Confirm/@p.PaymentId">Xác nhận thanh toán</a>
                        }
                        else if (p.Status == "Paid")
                        {
                            <span class="badge bg-success">Đã xác nhận</span>
                        }
                        else if (p.Status == "Unpaid" || p.Status == "Expired")
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
