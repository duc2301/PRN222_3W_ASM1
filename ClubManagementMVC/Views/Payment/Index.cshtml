@model IEnumerable<ClubManagement.Repository.Models.Payment>

@{
    ViewBag.Title = "All Payments";
    bool isAdmin = User.IsInRole("Admin") || User.IsInRole("Leader");
}

<h2>All Payments</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">@TempData["msg"]</div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th>User</th>
            <th>Fee Title</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
            @if (isAdmin)
            {
                <th>Action</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.User?.Email</td>
                <td>@p.Fee?.Title</td>
                <td>@p.Amount</td>
                <td>
                    @if (p.Status == "Pending")
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (p.Status == "Paid")
                    {
                        <span class="badge bg-success">Paid</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@p.Status</span>
                    }
                </td>
                <td>@(p.PaymentDate.HasValue? p.PaymentDate.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>

                @if (isAdmin)
                {
                    <td>
                        @if (p.Status == "Pending")
                        {
                            <a class="btn btn-success btn-sm" href="@Url.Action("Confirm", "Payment", new { id = p.PaymentId })">Duyệt</a>
                            <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Approve", "Payment", new { id = p.PaymentId })">Quick Approve</a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
