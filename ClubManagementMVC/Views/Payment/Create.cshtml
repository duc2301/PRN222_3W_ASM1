@{
    ViewBag.Title = "Tạo giao dịch nạp tiền";
}

<h2>Nạp Điểm - Tạo Giao Dịch</h2>

<div class="row">
    <div class="col-md-7">
        <div class="card mb-3 border-warning p-3">
            <h5 class="text-warning">Thông Tin Chuyển Khoản</h5>

            <div class="mt-3">
                <p><strong>Ngân hàng:</strong> MB</p>
                <p><strong>Số tài khoản:</strong> 0702812501</p>
                <p><strong>Chủ tài khoản:</strong> PHAM KHANG NGUYEN</p>

                <p>
                    <strong>Nội dung chuyển khoản (BẮT BUỘC):</strong>
                    <span class="text-danger">@ViewBag.TransferCode</span>
                </p>
                <p class="text-muted">Vui lòng chuyển khoản chính xác theo nội dung để hệ thống xử lý nhanh.</p>
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card p-3">
            <h5>Tạo Giao Dịch</h5>

            <form asp-action="Create" method="post">
                <input type="hidden" name="feeId" value="0" /> <!-- Nếu có FeeId thực tế thì truyền đúng -->
                <div class="form-group mb-3">

                    <label>Số tiền đã chuyển (VNĐ)</label>
                    <input name="amount" class="form-control" type="number" min="1000" step="1000" required />
                    <small class="form-text text-muted">Tối thiểu 1,000 VNĐ = 1 điểm</small>
                </div>

                <button class="btn btn-warning w-100">Tạo Giao Dịch</button>
            </form>
        </div>
    </div>
</div>
